  KindModule.o \
  UnitsModule.o \
  ProgramInitializationModule.o \
  RiemannProblemInitializationModule.o \
  TimeSteppingModule.o \
  ShockEntropyWaveInteraction1D_NuclearEOS.f90

UtilitiesModule_NuclearEOS.o: \
