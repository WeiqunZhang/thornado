include ../../../Build/Makefile_Build

all: HomogeneousSphere1D \
     CoolingProblem1D

HomogeneousSphere1D: \
	$(thornado) TransportProblemsInitializationModule.o \
	HomogeneousSphere1D.o
	$(FLINKER) $(FLAGS) -o HomogeneousSphere1D_$(MACHINE) \
	$(thornado) TransportProblemsInitializationModule.o \
	HomogeneousSphere1D.o \
	$(LIBRARIES)

CoolingProblem1D: \
	$(thornado) TransportProblemsInitializationModule.o \
	CoolingProblem1D.o
	$(FLINKER) $(FLAGS) -o CoolingProblem1D_$(MACHINE) \
	$(thornado) TransportProblemsInitializationModule.o \
	CoolingProblem1D.o \
	$(LIBRARIES)

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm -f HomogeneousSphere1D_$(MACHINE)
	rm -f CoolingProblem1D_$(MACHINE)

HomogeneousSphere1D.o: \
  KindModule.o \
  UnitsModule.o \
  ProgramInitializationModule.o \
  TransportProblemsInitializationModule.o \
  TimeSteppingModule.o \
  HomogeneousSphere1D.f90

CoolingProblem1D.o: \
  KindModule.o \
  UnitsModule.o \
  ProgramInitializationModule.o \
  TransportProblemsInitializationModule.o \
  TimeSteppingModule.o \
  CoolingProblem1D.f90

TransportProblemsInitializationModule.o: \
  KindModule.o \
  UnitsModule.o \
  ProgramHeaderModule.o \
  UtilitiesModule.o \
  MeshModule.o \
  FluidFieldsModule.o \
  RadiationFieldsModule.o \
  EquationOfStateModule.o \
  MomentEquationsUtilitiesModule.o \
  TransportProblemsInitializationModule.f90